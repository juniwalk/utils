<div class="form-group row">
	<div class="col-sm-3 text-sm-right">{label $input, class => 'col-form-label font-weight-normal py-1' /}</div>
    <div class="col-sm-9">
		<div class="input-group input-group-sm">
			{input $input, class => 'form-control datetime'}
			<div class="input-group-append">
				<label class="input-group-text" n:name="$input"><i class="{$iconPrefix}calendar"></i></label>
			</div>
		</div>
    </div>
</div>