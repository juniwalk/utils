{
	"name": "juniwalk/utils",
	"description": "Package of utilities.",
	"type": "library",
	"keywords": ["nette","nettefw","utils"],
	"license": "MIT",

	"authors": [{
		"name": "Martin ProchÃ¡zka",
		"email": "juniwalk@outlook.cz",
		"role": "Developer"
	}],

	"autoload": {
		"psr-4": {"JuniWalk\\Utils\\": "src/"}
	},

	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},

	"extra" : {
		"branch-alias" : {"dev-main" : "4.1.x-dev"}
	},

	"require": {
		"php": ">=8.2",
		"nette/schema": "^1.0",
		"nette/utils": "^4.0"
	},

	"require-dev": {
		"contributte/translation": "^2.0",
		"juniwalk/orm": ">=0.10 <1.0 | ^1.0",
		"latte/latte": "^3.0",
		"nette/application": "^3.2",
		"nette/security": "^3.2",
		"nette/tester": "^2.5",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan": "^2.0",
		"phpstan/phpstan-nette": "^2.0",
		"staabm/phpstan-todo-by": "^0.2",
		"symfony/console": "^6.0 | ^7.0",
		"symfony/process": "^7.0",
		"tracy/tracy": "^2.10"
	},

	"suggest": {
		"umpirsky/country-list": "List of countries in various format for CountryList.",
		"scrivo/highlight.php": "For syntaxHighlight latte filter."
	}
}
